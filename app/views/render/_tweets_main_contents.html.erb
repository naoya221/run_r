<div class="paginate-parent">
  <div class="paginate">
    <%= paginate @tweets %>
  </div>
</div>

<br>

<div class="row justify-content-around f-f-monospace">
  <% @tweets.each do |tweet| %>

    <div class="tweet-index-content-size col-md-6 col-lg-4">
      <div class="bg-tweet-index-content">
        <div class="d-flex justify-content-between">

          <%= link_to tweet.user, class: "link" do %>
            <div class="tweet-index-content">
              <div>
                <div class="tweet-index-image">
                    <% if tweet.user.image.present? %>
                      <img src=<%= tweet.user.image %> class="tweet-index-image-icon">
                    <% else %>
                      <img src="/images/dog2.png" class="tweet-index-image-icon">
                    <% end %>
                </div>

                <div class="tweet-index-nickname">
                  <strong><%= tweet.user == current_user ? 'あなた' : tweet.user.nickname %></strong>
                </div>
              </div>

              <div class="tweet-index-address">
                <%= tweet.address %>
              </div>
            </div>
          <% end %>

          <div>
            <%= link_to tweet do %>
              <img src=<%= tweet.place_image %> class = "place-image link rounded">
            <% end %>
          </div>

        </div>

        <div class="d-flex justify-content-center mb-2">
          <div class="tweet-index-place rounded">
            <%= tweet.place_name %>
          </div>
        </div>

        <div class="tweet-index-text bg-content-item rounded">
          <span id="like-<%= tweet.id %>">
            <%= render partial: "render/like", locals: { tweet: tweet } %>
          </span>
          <br>
          <%= tweet.content %>
        </div>
        <% tweet.tags.each do |tag| %>
          <%= link_to tag_tweets_path(tag_id: tag.id) do %>
            <%= tag.name %>
          <% end %>
        <% end %>

      </div>
    </div>

  <% end %>
</div>

<br>

<div class="paginate-parent">
  <div class="paginate">
    <%= paginate @tweets %>
  </div>
</div>
