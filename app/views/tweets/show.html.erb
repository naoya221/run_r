<div class="tweet-show-container f-f-monospace">

  <div class="">
    <div class="d-flex justify-content-center">
      <div class="">
        <img src=<%= @tweet.place_image %> class="tweet-show-place-image">
      </div>
    </div>

    <div class="tweet-show-place-name">
      <div class="">
        <%= @tweet.place_name %>
      </div>
    </div>
  </div>

  <div class="back-ground tweet-show-middle-container pb-5">

    <div class="tweet-show-middle-contents">

      <div class="tweet-show-left-contents">

        <div class="tweet-show-left-content">

          <%= link_to user_path(@tweet.user_id), class: "link" do %>
            <div class="tweet-show-profile">
              <div class="">
                <% if @tweet.user.image.present? %>
                <img src=<%= @tweet.user.image %> class="tweet-show-image-icon">
                <% else %>
                <img src="/images/dog2.png" class="tweet-show-image-icon">
                <% end %>
              </div>

              <div class="tweet-user mt-3 mb-0">
                <%= "#{@tweet.user.nickname}" %>
              </div>
            </div>
          <% end %>

          <div class="tweet-show-btn">
            <% if @tweet.user.current_user? %>
              <div class="tweet-show-edit-btn mt-5">
                <%= link_to edit_tweet_path(@tweet) do %>
                  <button type="button" class="btn btn-success text-white btn-lg">編集</button>
                <% end %>
              </div>

              <div class="tweet-show-delete-btn ml-3">
                <%= link_to @tweet, method: :delete do %>
                  <button type="button" class="btn btn-success text-white btn-lg">削除</button>
                <% end %>
              </div>
            <% else %>
              <div class="tweet-show-info">
                自分の投稿のみ<br>
                編集・削除できます
              </div>
            <% end %>

          </div>

        </div>

        <div class="tweet-show-place-texts">
          <%= @tweet.content %>
        </div>

      </div>

      <div class="address">
        <strong>　　住所 ：　</strong>
        <%= @tweet.address %>
        <div id='map' class="map"></div>
      </div>

    </div>

    <br>

    <div class="message-group">
      <div class="m-4 mt-5">
        <div class="titles p-2 pr-3 mt-5">コメント一覧</div>

        <br>

        <% if user_signed_in? %>
          <%= form_with url: tweet_messages_path(@tweet.id) do |f| %>
          <div class="d-flex align-items-center">
            <div class="">
              <%= f.text_area :text, placeholder: "コメントを入力", class: "massage-form p-2 rounded" %>
            </div>
            <div class="record-item">
              <%= f.submit "コメント", class: "record-item btn btn-success text-white" %>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>


      <div id='messages'>
        <% @tweet_messages.each do |message| %>
          <div class="bg-content-item message">
            <%= message.text %><br>
            <div class="text-right">
              <%= link_to message.user.current_user? ? "あなた" : "#{message.user.nickname}さん", message.user, class: "link" %>
              のコメントです
            </div>
          </div>
        <% end %>
      </div>
    </div>



  </div>
</div>


<script type="text/javascript">
    function initMap() {

        var test ={ lat: <%= @tweet.latitude %>, lng: <%= @tweet.longitude %> };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= @tweet.address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
</script>
