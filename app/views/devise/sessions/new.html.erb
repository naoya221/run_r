<div class="forms-container f-f-monospace">

  <div class="titles">
    　　ログイン　　
  </div>

  <br><br>
    <div class= "text-danger">
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>
    </div>
  <br>

  <div class="d-flex justify-content-center mt-3 mb-5">
    <div class="forms-content p-5">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="w-100">
          <div class="field">
            <%= f.label :email, class: "form-label" %><br/><em>( @ が必須です )</em><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 w-50" %>
          </div>

          <div class="field mt-4">
            <%= f.label :password, class: "form-label"  %><br/><em>( 6 文字以上の 半角英数字 必須です )</em><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: "p-2 w-50" %>
          </div>

          <div class="actions mt-5">
            <%= f.submit "ログインする", class: "btn btn-success btn-lg" %>
          </div>
        </div>  
      <% end %>

      <div class="d-flex justify-content-center">
        <div class="mt-4">
          <%= render "devise/shared/links" %>
        </div>
     </div> 

    </div>
  </div>

</div>  