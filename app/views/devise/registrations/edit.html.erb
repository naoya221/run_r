<div class="forms-container f-f-monospace">

  <div class="titles">
    <%= "#{@user.nickname} さんのユーザー編集ページ" %>
  </div>
  
  <br>

  <div class="edit-image"> 
    <% if @user.image.present? %>
      <img src=<%= @user.image %> class = "icon_image">
    <% else %>
      <img src="/images/dog2.png" class = "icon_image">
    <% end %>  
  </div>

  <div class="d-flex justify-content-center mt-5 mb-5">
    <div class="forms-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } )do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field  form-label mb-4">
          <%= f.label :プロフィール画像 %><br/>
          　　　　<%= f.file_field :image, id: "preview" %>
        </div>

        <div id="image-list"></div>


        <div class="field form-label mb-4">
          <%= f.label :nickname %><br>( 最大文字数 10 )<br/>
          <%= f.text_field :nickname, autofocus: true, maxlength: "10", class: "signup-form p-2 pr-5" %>
        </div>

        <div class="field form-label mb-4">
          <%= f.label :email %><br>( @ が必須です )<br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-form p-2" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "btn btn-success text-white mt-2 p-2 pl-3 pr-3" %>
          <%= link_to "戻る", :back, class: "btn btn-success text-white bg-secondary border-none  mt-2 ml-3" %>
        </div>
        
      <% end %>

    </div>
  </div>  

</div>  



