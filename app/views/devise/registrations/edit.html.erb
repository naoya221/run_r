<div class="title-box mb-5">
    <div class="page-title">
      <%= "#{@user.nickname} さんのユーザー編集ページ" %>
    </div>
</div>

<br>

<div class="edit-image"> 
  <% if @user.image.present? %>
    <img src=<%= @user.image %> class = "icon_image">
  <% else %>
    <img src="/images/staff1.jpg" class = "icon_image">
  <% end %>  
</div>


<div class="sign-login-bg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } )do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field  form-label mb-4">
      <%= f.label :プロフィール画像 %><br/>
      　　　　　　　　　　　　　　<%= f.file_field :image %>
    </div>


    <div class="field form-label mb-4">
      <%= f.label :nickname %><br>( 最大文字数 10 )<br/>
      <%= f.text_field :nickname, autofocus: true, maxlength: "10", class: "signup-form p-2 pr-5" %>
    </div>

    <div class="field form-label mb-4">
      <%= f.label :email %><br>( @ が必須です )<br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-form p-2" %>
    </div>

    <div class="field form-label mb-4">
      <%= f.label :password（旧） %><br/>(以前までのpassword)<br/>
      <%= f.password_field :current_password, autocomplete: "signup-form p-2" %>
    </div>

    <div class="field form-label mb-4">
      <%= f.label :password（新） %><br>( 6 文字以上の 半角英数字 必須です )<br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "signup-form p-2" %>
    </div>

    <div class="field form-label mb-4">
      <%= f.label :password（新）確認 %><br>( 6 文字以上の 半角英数字 必須です )<br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-form p-2" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-success text-white btn-lg  mt-2" %>
      <%= link_to "戻る", :back, class: "btn btn-success text-white btn-lg  mt-2 ml-3" %>
    </div>
    
  <% end %>

  

</div>



